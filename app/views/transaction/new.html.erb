   </div>
    
     <div class="mb-3">
     <%= form.number_field :amount, placeholder:"Amount", class:" text-base px-4 py-2 border mb-3 border-gray-300 rounded-lg focus:outline-none focus:border-green-400" %>
     </div>
    <div class="mb-3">
      <%= form.submit "Add New Transaction", class:"bg-red-500 px-4 py-2 font-semibold text-black inline-flex items-center space-x-2 rounded" %>
     </div>
  <% end %>
